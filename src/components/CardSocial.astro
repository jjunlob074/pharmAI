---
import ContentSection from "~/components/content-section.astro";

const cards = [
  {
    href: "/about",
    title: "About",
    body: "Learn about the pharmAI project and its mission."
  },
  {
    href: "/community",
    title: "Community",
    body: "Join the pharmAI community and collaborate with others."
  },
  {
    href: "/author",
    title: "Author",
    body: "Meet the author behind the pharmAI project."
  }
];
---

<ContentSection title="Social" id="social">
  <ul class="flex flex-wrap gap-4 reveal justify-center reveal">
    {cards.map(card => (
      <li class="link-card flex flex-col p-1 bg-green-200 w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
        <a href={card.href} class="p-4 flex flex-col h-full">
          <h2 class="text-md font-bold italic flex-1">
            {card.title}
            <span>&rarr;</span>
          </h2>
          <p class="mt-2 mb-0 color-[#444] flex-1">
            {card.body}
          </p>
        </a>
      </li>
    ))}
  </ul>
</ContentSection>

<style>
  :root {
    --accent: 40, 200, 100;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #138d40 30%,
      #47F2C5 60%
    );
  }
  .link-card {
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow:
      0 6px 10px -4px rgba(35, 198, 95, 0.7),
      0 4px 8px -4px rgba(35, 198, 95, 0.7);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #000;
    background-color: white;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #333;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
