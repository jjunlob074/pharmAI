---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
  title: "Chat with AI",
  description: "Engage in conversations with an AI, ask questions, get advice, and explore various topics through interactive discussions.",
  icon: "mdi:robot",
},
{
  title: "Medication Information",
  description: "Access detailed information about medications, their uses, side effects, and precautions for safe use.",
  icon: "mdi:pill",
},
{
  title: "Reminders",
  description: "Set reminders for taking your medications and ensure you never miss an important dose.",
  icon: "mdi:alarm",
},

];
---

<ContentSection title="Features" id="features">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 reveal">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6 hover:border-green-400 hover:text-green-400">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
