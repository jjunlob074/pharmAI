---
import ContentSection from "~/components/content-section.astro";
---
<style>
        .neon {
        animation: lightPulse 6s infinite ease-in-out;
        text-shadow:
            0 0 1px #fff,    /* Múltiples sombras para crear el efecto de neón */
            0 0 2px #fff,
            0 0 4px #4AF2C8, /* Cambiando el color de neón al deseado */
            0 0 8px #2DCC68,
            0 0 16px #4AF2C8,
            0 0 32px #2DCC68,
            0 0 64px #4AF2C8,
            0 0 128px #2DCC68;
        }

    #banner {
        height: 400px;
        background-position: 50%;
        background-repeat: no-repeat;
        background-attachment: fixed;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    section {
        padding: 100px;
    }


    @keyframes lightPulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }
</style>
<div
    class="bg-horizonAnimated bg-cover bg-scroll bg-center bg-no-repeat"
>
    <section 
        class="flex scroll-mt-24 flex-col items-start gap-4 space-y-8"
        id="banner" 
        style="background-image: url(/astronaut.png);"
    >
        <h2 class="neon gradient-text text-center font-extrabold tracking-tight text-2xl reveal">
            Welcome Human! I'm PharmaBot
        </h2>
    </section>
</div>